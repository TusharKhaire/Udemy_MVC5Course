@model Udemy_MVC5Course.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "CreateNew";
}

<h2>New Customer</h2>
@using (Html.BeginForm("CreateNew", "Customer"))
{
    <div class="form-horizontal">
        <div class="form-group">

            @Html.LabelFor(x => x.customer.C_Name, "Name")
            @Html.EditorFor(x => x.customer.C_Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.customer.Birthdate, "Date of Birth")
            @Html.EditorFor(x => x.customer.Birthdate, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="checkbox">
            @Html.CheckBoxFor(x => x.customer.IsSubscribeToWatchLetter)  Is Subscribe  ToWatch Letter ?
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.customer.MemberShipId, "Member Ship")
            @Html.DropDownListFor(x => x.customer.MemberShipId, new SelectList(Model.MembershipTypes,"Id","Name"),"", new { @class = "form-control" })
        </div>
        <div class="form-group"></div>
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Save" />

        </div>
    </div>


}

